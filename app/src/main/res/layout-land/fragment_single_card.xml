<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shared.ui.fragments.SingleCardFragment"
        android:padding="@dimen/normal_padding">

    <ImageView
            android:id="@+id/card_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_image"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/card_stats"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/card_rarity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/card_stats"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/card_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/card_stats"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/card_soul_summon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/card_stats"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/card_soul_trap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/card_stats"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/add_to_deck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_to_deck"
                app:layout_constraintTop_toBottomOf="@+id/card_soul_trap"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>